
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
<link href="~/css/registerPage.css" rel="stylesheet" type="text/css" asp-append-version="true" />
<div class="container">
    <form id="signup" asp-controller="Home" asp-action="RegisterUser" method="post">

        <div class="header">

            <h3>Registrera dig</h3>

            <p>Fyll i din personliga information</p>

        </div>

        <div class="sep"></div>

        <div class="inputs">

            <input type="text" placeholder="Namn" autofocus />

            <input type="text" placeholder="*Gatuadress" />

            <input type="text" placeholder="*Postnr" />

            <input type="text" placeholder="*Postort" />

            <input type="text" placeholder="Email (Optional)" />

            <input type="text" placeholder="Telefon (Optional)" />

            <input type="text" placeholder="*Användarnamn" />

            <input type="password" placeholder="*Lösenord" />

            <input id="submit" type="submit" value="Registrera dig" />

        </div>

    </form>

</div>
